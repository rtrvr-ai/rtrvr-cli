{
  "name": "@rtrvr-ai/core",
  "version": "0.1.1",
  "description": "Core runtime and API client primitives for rtrvr CLI/SDK",
  "license": "Apache-2.0",
  "repository": {
    "type": "git",
    "url": "https://github.com/rtrvr-ai/rtrvr-cli",
    "directory": "packages/core"
  },
  "homepage": "https://rtrvr.ai",
  "keywords": [
    "rtrvr",
    "browser-automation",
    "web-agent",
    "mcp",
    "ai-agent",
    "scraping",
    "api-client"
  ],
  "engines": {
    "node": ">=18.0.0"
  },
  "type": "module",
  "main": "dist/index.js",
  "types": "dist/index.d.ts",
  "exports": {
    ".": {
      "types": "./dist/index.d.ts",
      "default": "./dist/index.js"
    }
  },
  "files": [
    "dist"
  ],
  "publishConfig": {
    "access": "public"
  },
  "scripts": {
    "build": "tsup src/index.ts --format esm --dts",
    "prepublishOnly": "pnpm run build",
    "typecheck": "tsc --noEmit",
    "test": "pnpm run build && node --test test/*.test.mjs",
    "lint": "echo 'No lint configured for @rtrvr-ai/core'"
  },
  "devDependencies": {
    "tsup": "^8.5.0",
    "typescript": "^5.9.3",
    "@types/node": "^22.18.8"
  }
}
